<config>
	<modules>
        <Exactor_Sales>
            <version>2012.06.14</version>
        </Exactor_Sales>
    </modules>
    <global>
        <events>
            <checkout_submit_all_after>
                <observers>
                    <exactor_sales_observer>
                        <type>singleton</type>
                        <class>Exactor_Sales_Model_Observer</class>
                        <method>handleAllOrdersCompleted</method>
                    </exactor_sales_observer>
                </observers>
            </checkout_submit_all_after>
            <sales_order_place_after>
                <observers>
                    <exactor_sales_observer>
                        <type>singleton</type>
                        <class>Exactor_Sales_Model_Observer</class>
                        <method>handleCreatedOrder</method>
                    </exactor_sales_observer>
                </observers>
            </sales_order_place_after>
            <sales_order_creditmemo_refund>
                <observers>
                    <exactor_sales_observer>
                        <type>singleton</type>
                        <class>Exactor_Sales_Model_Observer</class>
                        <method>handleNewCreditMemo</method>
                    </exactor_sales_observer>
                </observers>
            </sales_order_creditmemo_refund>
            <order_cancel_after>
                <observers>
                    <exactor_sales_observer>
                        <type>singleton</type>
                        <class>Exactor_Sales_Model_Observer</class>
                        <method>handleCancelOrder</method>
                    </exactor_sales_observer>
                </observers>
            </order_cancel_after>
            <sales_order_shipment_save_after>
                <observers>
                    <exactor_sales_observer>
                        <type>singleton</type>
                        <class>Exactor_Sales_Model_Observer</class>
                        <method>handleNewShipment</method>
                    </exactor_sales_observer>
                </observers>
            </sales_order_shipment_save_after>
            <sales_order_invoice_pay>
                <observers>
                    <exactor_sales_observer>
                        <type>singleton</type>
                        <class>Exactor_Sales_Model_Observer</class>
                        <method>handleNewInvoice</method>
                    </exactor_sales_observer>
                </observers>
            </sales_order_invoice_pay>
        </events>
    </global>
</config>